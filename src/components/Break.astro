---
import Coffee from '@/icons/Coffee.svg'

const { item } = Astro.props
const { topic, time } = item
---

<div class="py-6 flex items-center justify-center gap-6 opacity-80 group">
  <div class="h-[1px] flex-grow bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
  <div class="flex flex-col items-center gap-1">
    <div class="flex items-center gap-2 text-gray-400 group-hover:text-js-yellow transition-colors">
      <Coffee class="size-5" />
      <span class="uppercase tracking-[0.2em] text-xs font-black font-clash">{topic}</span>
    </div>
    <span class="text-white/60 font-mono text-sm">{time}</span>
  </div>
  <div class="h-[1px] flex-grow bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
</div>
