---
import { Image } from 'astro:assets'

export interface Props {
  name: string
  role: string
  company: string
  description: string
  imageUrl: string
  social?: string
  socialType: string
}

const {
  name,
  role,
  company,
  description,
  imageUrl,
  social,
  socialType,
} = Astro.props
---

<div class="bg-dark-surface rounded-xl overflow-hidden border border-white/5 relative hover:-translate-y-2 hover:shadow-[0_10px_30px_rgba(0,0,0,0.5)] hover:border-js-yellow transition-all duration-300 group flex flex-col h-full">
  <div class="relative h-[300px] overflow-hidden">
    <Image
      inferSize
      src={imageUrl}
      alt={name}
      width={400}
      height={300}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div class="p-6 flex flex-col flex-1">
    <h3 class="text-xl text-js-yellow font-bold mb-1">{name}</h3>
    <div class="text-sm text-gray-300 mb-4">
      <span>{role}</span>
      {company && <span class="block text-gray-300">@ {company}</span>}
    </div>
    <p class="text-sm leading-relaxed text-[#aaa] mb-4 flex-1">{description}</p>
    {social && (
      <div class="flex gap-4 mt-auto">
        <a 
          href={social} 
          target="_blank" 
          title={socialType}
          rel="noopener noreferrer" 
          class="text-white text-lg hover:text-js-yellow transition-colors"
        >
          {social.includes('twitter') || social.includes('x.com') ? (
            <svg class="w-5 h-5" fill="none" viewBox="0 0 1200 1227">
              <path
                fill="currentColor"
                d="M714.163 519.284 1160.89 0h-105.86L667.137 450.887 357.328 0H0l468.492 681.821L0 1226.37h105.866l409.625-476.152 327.181 476.152H1200L714.137 519.284h.026ZM569.165 687.828l-47.468-67.894-377.686-540.24h162.604l304.797 435.991 47.468 67.894 396.2 566.721H892.476L569.165 687.854v-.026Z"
              />
            </svg>
          ) : social.includes('github') ? (
            <i class="fab fa-github"></i>
          ) : social.includes('linkedin') ? (
            <i class="fab fa-linkedin"></i>
          ) : (
            <i class="fas fa-link"></i>
          )}
        </a>
      </div>
    )}
  </div>
</div>
