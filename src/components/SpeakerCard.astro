---
import { Image } from 'astro:assets'

export interface Props {
  name: string
  role: string
  company: string
  description: string
  imageUrl: string
  social?: string
}

const {
  name,
  role,
  company,
  description,
  imageUrl,
  social,
} = Astro.props
---

<div class="bg-dark-surface rounded-xl overflow-hidden border border-white/5 relative hover:-translate-y-2 hover:shadow-[0_10px_30px_rgba(0,0,0,0.5)] hover:border-js-yellow transition-all duration-300 group">
  <div class="relative h-[300px] overflow-hidden">
    <Image
      inferSize
      src={imageUrl}
      alt={name}
      width={400}
      height={300}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl text-js-yellow font-bold mb-1">{name}</h3>
    <div class="text-sm text-gray-400 mb-4 flex items-center gap-2">
      <span>{role}</span>
      {company && <span>@ {company}</span>}
    </div>
    <p class="text-sm leading-relaxed text-[#aaa] mb-4">{description}</p>
    {social && (
      <div class="flex gap-4">
        <a 
          href={social} 
          target="_blank" 
          rel="noopener noreferrer" 
          class="text-white text-lg hover:text-js-yellow transition-colors"
        >
          {social.includes('twitter') || social.includes('x.com') ? (
            <i class="fab fa-twitter"></i>
          ) : social.includes('github') ? (
            <i class="fab fa-github"></i>
          ) : social.includes('linkedin') ? (
            <i class="fab fa-linkedin"></i>
          ) : (
            <i class="fas fa-link"></i>
          )}
        </a>
      </div>
    )}
  </div>
</div>
