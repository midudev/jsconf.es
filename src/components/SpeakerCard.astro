---
export interface CardProps {
  name: string
  role: string
  company: string
  description: string
  imageUrl: string
  companyLogo: any
  marginTop?: string
}

import LottieLogo from '@/icons/LottieLogo.svg'
import VercelLogo from '@/icons/VercelLogo.svg'
import GoogleSmallLogo from '@/icons/GoogleSmallLogo.svg'
import VueLogo from '@/icons/VueLogo.svg'

const { name, role, company, description, imageUrl, companyLogo, marginTop } = Astro.props as CardProps

const icons: Record<string, any> = {
  LottieLogo: LottieLogo,
  VercelLogo: VercelLogo,
  GoogleSmallLogo: GoogleSmallLogo,
  VueLogo: VueLogo,
}
---

<div class="card font-clash bg-black text-white">
  <img src={imageUrl} alt={name} class="w-full" />
  <div class="flex flex-col md:gap-y-[14px] gap-y-[6px] border border-white/10 md:p-6 p-3">
    <div>
      <div class="flex flex-row items-center justify-between">
        <h3 class="md:text-2xl text-[12px] font-medium">{name}</h3>
        {(() => {
          const IconComponent = icons[companyLogo]
          return IconComponent ? <IconComponent className="md:size-6 size-3" /> : null
        })()}
      </div>
      <div class="flex flex-row gap-x-1 md:text-base text-[10px] text-yellow-400 font-medium">
        <p>{role}</p>
        <p>@{company}</p>
      </div>
    </div>
    <p class="md:text-sm text-xs leading-none text-neutral-400">{description}</p>
  </div>
</div>
<style define:vars={{ marginTop }}>
  .card {
    margin-top: var(--marginTop);
  }
  @media (max-width: 1024px) {
    .card {
      margin-top: 0;
    }
  }
</style>
