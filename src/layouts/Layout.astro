---
import { ViewTransitions } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Conferencia de Programación de JavaScript en España en La Nave de Madrid" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- add og image -->
    <meta property="og:image" content="https://jsconfes.com/og.jpg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:title" content="JSConf España 2025">
    <meta property="og:description" content="Conferencia de Programación de JavaScript en España en La Nave de Madrid">
    <meta property="og:url" content="https://jsconfes.com">
    <!-- add twitter card -->
     <meta name="twitter:card" content="summary_large_image">
     <meta name="twitter:site" content="@midudev">
     <meta name="twitter:creator" content="@midudev">
     <meta name="twitter:title" content="JSConf España 2025">
     <meta name="twitter:description" content="Conferencia de Programación de JavaScript en España en La Nave de Madrid">
     <meta name="twitter:image" content="https://jsconfes.com/og.jpg">
     <script src="https://js.tito.io/v2" async></script>
     <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: black;
    display: grid;
    place-items: center;
    min-height: 100vh;
    overflow-x: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
