---
import Layout from '@/layouts/Layout.astro'

import LandingSection from '@/sections/Landing.astro'
import WhenAndWhereSection from '@/sections/WhenAndWhere.astro'
import WhySection from '@/sections/Why.astro'
import SpeakersSection from '@/sections/Speakers.astro'
import SponsorsSection from '@/sections/Sponsors.astro'
import WorkshopsSection from '@/sections/Workshops.astro'
import AgendaSection from '@/sections/Agenda.astro'
import PresenterSection from '@/sections/Presenter.astro'
import RunAndFunSection from '@/sections/RunAndFun.astro'

import { checkIsChannelOnlineInTwitch } from '@/utils/check-is-channel-online-in-twitch'

const isOnline = await checkIsChannelOnlineInTwitch('midudev')
---

<Layout isOnline={isOnline}>
  <LandingSection isOnline={isOnline} />
  <WhenAndWhereSection />
  <WhySection />
  <SpeakersSection />
  <SponsorsSection />
  <WorkshopsSection isOnline={isOnline} />
  <AgendaSection />
  <PresenterSection />
  <RunAndFunSection />
</Layout>
