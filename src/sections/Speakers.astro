---
import Container from '@/components/Container.astro'
import CrossContainerTitle from '@/components/CrossContainerTitle.astro'
import Card from '@/components/SpeakerCard.astro'
import VercelLogo from '@/icons/VercelLogo.svg'
import LottieLogo from '@/icons/LottieLogo.svg'
import VueLogo from '@/icons/VueLogo.svg'

const speakers = [
  {
    name: 'Carmen Ansio',
    role: 'Designer Engineer',
    company: 'LottieFiles',
    description:
      'La maga del CSS, la que lleva las animaciones al próximo nivel. Verás lo que sabe de JavaScript.',
    imageUrl: '/img/Speaker1.webp',
    companyLogo: LottieLogo,
  },
  {
    name: 'Javier Velasco',
    role: 'Tech Lead',
    company: 'Vercel',
    description:
      'El 7º programador de Vercel. Muchas cosas buenas de Next.js son por su mano y gracia.',
    imageUrl: '/img/Speaker2.webp',
    companyLogo: VercelLogo,
  },
  {
    name: 'Fernando Herrera',
    role: 'Profesor en Línea',
    company: 'DevTalles',
    description:
      'El Profesor en línea de Programación Web más visto. Seguro viste un curso suyo alguna vez.',
    imageUrl: '/img/fernando-herrera.webp',
    companyLogo: 'img/devtalles-logo.webp',
  },
  {
    name: 'Eduardo San Martín',
    role: 'Core Contributor',
    company: 'Vue.js',
    description:
      'Creador de Vue Router, Pinia y Vue Fire. ¿Y qué más? Contribuye al core de Vue.js',
    imageUrl: '/img/eduardo-vue.webp',
    companyLogo: VueLogo,
  },
]
---

<section id="speakers" class="px-section scroll-mt-28">
  <Container class="items-center">
    <div class="flex justify-center flex-wrap">
      <h1 class="font-clash text-white lg:text-7xl sm:text-5xl text-3xl text-center leading-tight">
        ¡Nuestros
        <CrossContainerTitle>speakers</CrossContainerTitle> son auténticas estrellas de JavaScript de
        la comunidad hispana!
      </h1>
    </div>
    <div class="grid lg:grid-cols-4 grid-cols-2 md:gap-x-6 gap-x-3 md:gap-y-10 gap-y-6 pt-20">
      {
        speakers.map((speaker, index) => (
          <Card
            {...speaker}
            companyLogo={speaker.companyLogo}
            marginTop={`${(index % 4) * 20}px`}
          />
        ))
      }
    </div>
  </Container>
</section>
